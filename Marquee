const OurCustomersSection = () => {
  return (
    <section className="our-customers">
      <h1 className="title-h">
        Our <span className="text-accent">happy customers</span> love us
      </h1>
      <Swiper
        id="marquee-1"
        className="marquee-container"
        wrapperClass="marquee-wrapper"
        {...swiperOpts}
      >
        {testimonials.map((item, index) => {
          return (
            <SwiperSlide key={`marquee-1-slide-${index}`}>
              {/* TODO Parametrize this card */}
              <TestimonialsCard {...item} />
            </SwiperSlide>
          )
        })}
      </Swiper>
      <Swiper
        id="marquee-2"
        className="marquee-container"
        wrapperClass="marquee-wrapper"
        {...swiperOpts}
        autoplay={{
          delay: 1,
          reverseDirection: true,
        }}
      >
        {testimonials.map((item, index) => {
          return (
            <SwiperSlide key={`marquee-2-slide-${index}`}>
              <TestimonialsCard {...item} />
            </SwiperSlide>
          )
        })}
      </Swiper>
    </section>
  )
}

export default OurCustomersSection
